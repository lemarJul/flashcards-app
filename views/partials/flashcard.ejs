

<% var flashcard = flashcard || {question: 'Default question', answer: 'Default answer'}; %>


<div class="flashcard-container">
  <div class="flashcard" onclick="this.classList.toggle('flip')">
    <div class="front">
      <p>
       <%= flashcard?.question  %>
      </p>
    </div>
    <div class="back flex-row">
      <p>
        <%= flashcard?.answer %>
      </p>
    </div>
  </div>
  <div  class="buttons-flashcard">
      <input
      style="width: 80%"
      type="radio"
      id="right"
      name="success"
      value="true"
      />
      <label for="right">Right</label>
      <input
        style="width: 80%"
        type="radio"
        id="wrong"
        name="success"
        value="false"
      />
      <label for="wrong">Wrong</label>
  </div>
</div>
<style>
  .flashcard-container {
    perspective: 1000px;
    width: 600px;
  }

  .flashcard {
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.25);

    aspect-ratio: 16/9;
    position: relative;
    transition: transform 1s;
    transform-style: preserve-3d;
    text-align: justify;
  }

  .flashcard.flip {
    transform: rotateY(180deg);
  }

  .front,
  .back {
    padding: 30px;
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    flex-direction: column;
    position: absolute;
    backface-visibility: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .back {
    transform: rotateY(180deg);
  }

  .buttons-flashcard{
    position: relative;
    top : -350px;
    right: -620px;
    width: 30px;
    margin-top: 20px;
    display: flex;
    flex-direction: column;
    gap: 10px;
  }
</style>
