<%if (locals.error) { %>

<div id="snackbar" class="error"><%= locals.error.message%></div>
<script>
  window.onload = function () {
    var snackbar = document.getElementById("snackbar");
    snackbar.className = "show";

    setTimeout(function () {
      snackbar.className = snackbar.className.replace("show", "");
    }, 3000);
  };
</script>

<% } %>
